# ~/.bashrc: executed by bash(1) for non-login shells.
# see /usr/share/doc/bash/examples/startup-files (in the package bash-doc)
# for examples

export DOTFILES=~/.dotfiles

# source specific .bashrc files
function dotbashrc() {
    local file
    if [[ "${1}" ]]; then
        file="${DOTFILES}/bash/${1}.bashrc"
        if [ -f ${file} ]; then
            source "${file}"
        fi
    fi
}

# Source all files in "bash"
function dotsrc() {
    local file
    if [[ "${1}" ]]; then
        file="${DOTFILES}/bash/${1}.sh"
        if [ -f ${file} ]; then
            source "${file}"
        fi
    else
        for file in ${DOTFILES}/bash/*.sh; do
            source "$file"
        done
    fi
}

# Always load all functions
dotsrc 

# Common initialization
dotbashrc common

# Load login specific utilities
if shopt -q login_shell; then
    dotbashrc login
fi

# If not running interactively, do not load interactive functions
case $- in
    *i*) ;;
      *) return ;;
esac
dotbashrc interactive

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/opt/miniconda3/bin/conda' 'shell.bash' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/opt/miniconda3/etc/profile.d/conda.sh" ]; then
        . "/opt/miniconda3/etc/profile.d/conda.sh"
    else
        export PATH="/opt/miniconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<
