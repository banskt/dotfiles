# ~/.bashrc: executed by bash(1) for non-login shells.
# see /usr/share/doc/bash/examples/startup-files (in the package bash-doc)
# for examples

# Always load these functions and alias
if [ -f ~/.bashd/always.bashrc ]; then 
    . ~/.bashd/always.bashrc
fi

# Load login specific utilities
if shopt -q login_shell; then
    if [ -f ~/.bashd/login.bashrc ]; then
        . ~/.bashd/login.bashrc
    fi
fi

# If not running interactively, do not load interactive functions
case $- in
    *i*) ;;
      *) return ;;
esac
if [ -f ~/.bashd/interactive.bashrc ]; then
    . ~/.bashd/interactive.bashrc
fi



if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi

# enable programmable completion features (you don't need to enable
# this, if it's already enabled in /etc/bash.bashrc and /etc/profile
# sources /etc/bash.bashrc).
if ! shopt -oq posix; then
  if [ -f /usr/share/bash-completion/bash_completion ]; then
    . /usr/share/bash-completion/bash_completion
  elif [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
  fi
fi

# Use my aliases
if [ -f ~/saikat_bashrc ]; then
 . ~/saikat_bashrc
fi

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/opt/miniconda3/bin/conda' 'shell.bash' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/opt/miniconda3/etc/profile.d/conda.sh" ]; then
        . "/opt/miniconda3/etc/profile.d/conda.sh"
    else
        export PATH="/opt/miniconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<
